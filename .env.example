# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@host:5432/database_name

# OR use individual PostgreSQL settings
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password
PGDATABASE=garant_bot

# Server Configuration
PORT=5000
SESSION_SECRET=your_secret_key_here

# Web App URL (для Telegram Mini App)
WEB_APP_URL=https://your-domain.com

# Optional: For Replit deployment
# REPLIT_DEV_DOMAIN will be auto-detected

# Optional: For Render/other hosting
# RENDER_EXTERNAL_URL=https://your-app.onrender.com
# PING_URL=https://your-app.onrender.com
